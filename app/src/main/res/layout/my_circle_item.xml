<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="30dp"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/llRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                style="@style/black_bold_bigest_xx_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tvDay"
                style="@style/black_bold_bigest_xx_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tvMonth"
                style="@style/black_bold_normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.huixiangtv.live.ui.ZJImageView
                android:visibility="gone"
                android:id="@+id/oneImg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/default_head"
                app:radius="1dp"
                app:shape_type="rectangle" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llImg2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <com.huixiangtv.live.ui.ZJImageView
                    android:id="@+id/twoImg1"
                    android:layout_width="35dp"
                    android:layout_height="70dp"
                    android:src="@drawable/default_head"
                    app:radius="1dp"
                    app:shape_type="rectangle" />


                <com.huixiangtv.live.ui.ZJImageView
                    android:id="@+id/twoImg2"
                    android:layout_width="34dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="0.5dp"
                    android:src="@drawable/default_head"
                    app:radius="1dp"
                    app:shape_type="rectangle" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llImg3"
                android:visibility="gone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <com.huixiangtv.live.ui.ZJImageView
                    android:id="@+id/threeImg1"
                    android:layout_width="35dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="0.5dp"
                    android:src="@drawable/default_head"
                    app:radius="1dp"
                    app:shape_type="rectangle" />


                <LinearLayout
                    android:layout_width="34dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <com.huixiangtv.live.ui.ZJImageView
                        android:id="@+id/threeImg2"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:src="@drawable/default_head"
                        app:radius="1dp"
                        app:shape_type="rectangle" />

                    <com.huixiangtv.live.ui.ZJImageView
                        android:id="@+id/threeImg3"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="0.5dp"
                        android:src="@drawable/default_head"
                        app:radius="1dp"
                        app:shape_type="rectangle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llImg4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <com.huixiangtv.live.ui.ZJImageView
                        android:id="@+id/fourImg1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:src="@drawable/default_head"
                        app:radius="1dp"
                        app:shape_type="rectangle" />
                    <com.huixiangtv.live.ui.ZJImageView
                        android:id="@+id/fourImg3"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="0.5dp"
                        android:src="@drawable/default_head"
                        app:radius="1dp"
                        app:shape_type="rectangle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="0.5dp"
                    android:orientation="vertical">


                    <com.huixiangtv.live.ui.ZJImageView
                        android:id="@+id/fourImg2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:src="@drawable/default_head"
                        app:radius="1dp"
                        app:shape_type="rectangle" />

                    <com.huixiangtv.live.ui.ZJImageView
                        android:id="@+id/fourImg4"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginTop="0.5dp"
                        android:src="@drawable/default_head"
                        app:radius="0.5dp"
                        app:shape_type="rectangle" />

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlVideo"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <com.huixiangtv.live.ui.ZJImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_43"
                    app:radius="1dp"
                    app:shape_type="rectangle" />

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/live"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="60dp"
            android:layout_marginRight="10dp"
            android:background="@color/dy_text_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/tvContent"
                style="@style/black_normal_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tvImgCount"
                style="@style/white_small_style"
                android:textColor="#A0A0A0"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:text="共2张" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>