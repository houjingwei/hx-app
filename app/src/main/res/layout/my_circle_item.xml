<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/llRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                style="@style/black_bold_bigest_xx_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tvDay"
                style="@style/black_bold_bigest_xx_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tvMonth"
                style="@style/black_bold_normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/oneImg"
                android:visibility="gone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llImg2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/twoImg1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:id="@+id/twoImg2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="0.3dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llImg3"
                android:visibility="gone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/threeImg1"
                    android:layout_width="35dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop" />


                <LinearLayout
                    android:layout_width="34dp"
                    android:layout_marginLeft="0.3dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/threeImg2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/threeImg3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="0.3dp"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llImg4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fourImg1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/fourImg3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="0.3dp"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="34dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="0.3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fourImg2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@+id/fourImg4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="0.3dp"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlVideo"
                android:layout_width="70dp"
                android:visibility="gone"
                android:layout_height="55dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/live"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:layout_marginRight="10dp"
            android:background="@color/dy_text_bg"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvContent"
                style="@style/black_normal_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="快船还打算继续为克劳福德报价" />

            <TextView
                android:id="@+id/tvImgCount"
                style="@style/white_small_style"
                android:textColor="#A0A0A0"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:text="共2张" />

            <TextView
                android:id="@+id/tvDelete"
                style="@style/white_small_style"
                android:layout_toRightOf="@+id/tvImgCount"
                android:clickable="true"
                android:textColor="#A0A0A0"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:text="删除" />
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>