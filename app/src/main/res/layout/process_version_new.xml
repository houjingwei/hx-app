<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/n_v_top" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivTitle"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、超女竞技吸粉，更多玩法互动。" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2、活动比赛选出更多喜欢的艺人" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3、领金币呀领金币，点惊喜有金币一百个呵呵呵。" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="个呵呵呵。" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/n_v_bottom" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLevelEv"
                android:layout_width="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:layout_margin="10dp"
                android:paddingBottom="5dp"
                android:background="@drawable/button_radius_uplpad"
                android:layout_height="wrap_content"
                android:text="@string/uploadLevel" />


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlLevelInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件更新"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/self_line"/>
                <ProgressBar
                    android:id="@+id/pb"
                    android:paddingTop="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:minHeight="5dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/bg_bar"/>
                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:textColor="@color/black"
                    android:layout_below="@id/pb"
                    android:layout_alignLeft="@id/pb"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_durrent"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/100"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/pb"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_msg_buttom" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>