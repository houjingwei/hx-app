<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black_11"
    tools:context="com.huixiangtv.live.activity.MyConcernActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        >
        <ImageView
            android:id="@+id/myconcernback"
            android:layout_width="@dimen/baseTitleHeight"
            android:layout_height="@dimen/baseTitleHeight"
            android:clickable="true"
            android:padding="12dp"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            style="@style/common_title_style"
            android:text="@string/myconcern"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/search_concern"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_search"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_concern"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:text="@string/searchfans"
                style="@style/gray_bigger_style"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >
    <ImageView
        android:id="@+id/firstconcern"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/icon_firstfan"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firstconcernimg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@+id/firstconcern"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/default_head"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/firstconcernimg"
        android:layout_marginLeft="15dp"
        android:text="@string/fansname2"
        style="@style/black_bigger_style"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="345667"
        style="@style/black_bigger_style"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_04"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:id="@+id/secondconcern"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_secondfan"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/secondconcernimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@+id/secondconcern"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_head"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/secondconcernimg"
            android:layout_marginLeft="15dp"
            android:text="@string/fansname2"
            style="@style/black_bigger_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="345667"
            style="@style/black_bigger_style"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_04"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        <ImageView
            android:id="@+id/thirdconcern"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_thirdfan"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/thirdconcernimg"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@+id/thirdconcern"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_head"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/thirdconcernimg"
            android:layout_marginLeft="15dp"
            android:text="@string/fansname2"
            style="@style/black_bigger_style"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="345667"
            style="@style/black_bigger_style"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_04"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myconcernlist"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
