<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegPicListActivity"
    >


    <FrameLayout
        android:id="@+id/merto_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <com.huixiangtv.live.utils.widget.DropImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:scaleType="matrix"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:id="@+id/item_layout1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <com.huixiangtv.live.utils.widget.DropImageView
                        android:id="@+id/imageView2"
                        android:scaleType="matrix"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >
                        <com.huixiangtv.live.utils.widget.DropImageView
                            android:id="@+id/imageView3"
                            android:scaleType="matrix"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white" />

                        <com.huixiangtv.live.utils.widget.DropImageView
                            android:id="@+id/imageView4"
                            android:layout_width="0dp"
                            android:scaleType="matrix"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white" />

                        <com.huixiangtv.live.utils.widget.DropImageView
                            android:id="@+id/imageView5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="matrix"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_gravity="bottom|left"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="上传图片"
            android:gravity="center"
            android:id="@+id/txtUpload"
            android:padding="10dp"
            android:clickable="true"
            android:textColor="@color/white"
            android:paddingRight="30dp"
            android:drawableLeft="@drawable/card_up"
            android:layout_marginBottom="20dp"
            android:background="@drawable/reg_pic_bg"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>