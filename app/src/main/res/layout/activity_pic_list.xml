<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RegPicListActivity">


    <FrameLayout
        android:id="@+id/merto_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@color/white">

                    <!--<com.huixiangtv.live.utils.image.ScalableImageView-->
                    <!--android:id="@+id/imageView1"-->
                    <!--android:src="@drawable/pic1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@color/black"-->
                    <!--android:scaleType="matrix" />-->

                    <com.huixiangtv.live.utils.widget.DropImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:scaleType="centerCrop" />
                    <LinearLayout
                        android:id="@+id/ll_per_info"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:visibility="gone"
                        android:layout_gravity="bottom|left"
                        android:background="@color/black80"
                        android:clickable="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/black80"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/tvLid"
                                style="@style/white_small_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="回响号：0" />

                            <TextView
                                android:id="@+id/tvShareId"
                                style="@style/white_small_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="12566: 分享"
                                android:textColor="@color/white" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtHeight"
                                    style="@style/white_small_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="165CM"
                                    android:textColor="@color/white" />


                                <TextView
                                    android:id="@+id/txtWeight"
                                    style="@style/white_small_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toLeftOf="@id/txtHeight"
                                    android:text="80kg"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tvYW"
                                    style="@style/white_small_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="84-63-89"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtSj"
                                style="@style/white_small_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/tvShareId"
                                android:text="12566: 人气"
                                android:textColor="@color/white" />


                            <TextView

                                android:id="@+id/txtName"
                                style="@style/white_normal_style"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="刘德华" />


                            <TextView
                                android:id="@+id/txtFansi"
                                style="@style/white_small_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:text="12566: 粉丝"
                                android:textColor="@color/white" />

                        </RelativeLayout>


                    </LinearLayout>


                </FrameLayout>


                <LinearLayout
                    android:id="@+id/item_layout1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.huixiangtv.live.utils.widget.DropImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:adjustViewBounds="true"
                        android:background="@color/transparent"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.huixiangtv.live.utils.widget.DropImageView
                            android:id="@+id/imageView3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:padding="0dp"
                            android:scaleType="centerCrop" />

                        <com.huixiangtv.live.utils.widget.DropImageView
                            android:id="@+id/imageView4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:scaleType="centerCrop" />

                        <com.huixiangtv.live.utils.widget.DropImageView
                            android:id="@+id/imageView5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/txtUpload"-->
            <!--style="@style/white_normal_style"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom|right"-->
            <!--android:layout_marginBottom="5dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@drawable/reg_pic_bg"-->
            <!--android:clickable="true"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="3dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="8dp"-->
            <!--android:paddingTop="3dp"-->
            <!--android:tag="1"-->
            <!--android:text="上传" />-->

        <TextView
            android:id="@+id/txtSave"
            style="@style/white_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reg_pic_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:text="保存"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/txtUpload"
            style="@style/white_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="68dp"
            android:background="@drawable/reg_pic_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:tag="1"
            android:text="上传"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtEdit"
            style="@style/white_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="68dp"
            android:background="@drawable/reg_pic_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:tag="1"
            android:text="编辑"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/txtssj"
            style="@style/white_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="130dp"
            android:background="@drawable/reg_pic_bg"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:tag="1"
            android:text="身价"
            android:textColor="@color/white" />



        <TextView
            android:id="@+id/txtShare"
            style="@style/white_normal_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reg_pic_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="4dp"
            android:text="分享"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/baseTitleHeight"
            android:layout_height="@dimen/baseTitleHeight"
            android:paddingBottom="14dp"
            android:paddingLeft="-10dp"
            android:paddingTop="14dp"
            android:src="@mipmap/icon_back"></ImageView>
    </FrameLayout>


</LinearLayout>