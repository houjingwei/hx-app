<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sysBg"
    android:id="@+id/main"
    android:orientation="vertical">

    <com.huixiangtv.live.ui.CommonTitle
        android:id="@+id/myTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/llAccountInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelBalance"
                    style="@style/black_bigest_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/balance" />

                <TextView
                    android:id="@+id/tvBalance"
                    style="@style/red_bigest_xx_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="100" />

                <TextView
                    style="@style/normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="金币" />
            </LinearLayout>

            <TextView
                android:id="@+id/artist"
                style="@style/white_small_style"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/comm_text_border"
                android:gravity="center"
                android:minHeight="25dp"
                android:text="@string/takeMoney" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llRedBag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelRedBag"
                    style="@style/black_bigest_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/myRedBag" />

                <TextView
                    android:id="@+id/tvMyRedBag"
                    style="@style/red_bigger_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="( 待拆1/个 )" />


            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_go" />
        </RelativeLayout>

        <ListView
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvXieyi"
                style="@style/gray_normal_style"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/zfxieyi"
                 />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.3dp"
                android:layout_alignLeft="@+id/tvXieyi"
                android:layout_alignRight="@+id/tvXieyi"
                android:layout_below="@+id/tvXieyi"
                android:background="@color/split_color" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
