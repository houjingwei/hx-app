<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.huixiang.live.ui.CommonTitle
        android:id="@+id/myTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sysBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/llAccountInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelBalance"
                        style="@style/black_bigest_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/balance" />

                    <TextView
                        android:id="@+id/tvBalance"
                        style="@style/red_bigest_xx_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="100" />

                    <TextView
                        style="@style/normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="金币" />
                </LinearLayout>

                <TextView
                    android:id="@+id/artist"
                    style="@style/white_small_style"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/comm_text_border"
                    android:gravity="center"
                    android:minHeight="25dp"
                    android:text="@string/takeMoney" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/llRedBag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelRedBag"
                        style="@style/black_bigest_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/myRedBag" />

                    <TextView
                        android:id="@+id/tvMyRedBag"
                        style="@style/red_bigger_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="( 待拆1/个 )" />


                </LinearLayout>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llBuyCoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbwx"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/pay_way_wx"
                        android:button="@null"/>



                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rbzfb"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/pay_way_zfb"
                        android:button="@null"/>


                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/rbapple"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/pay_way_apple"
                        android:button="@null"/>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvLoginBtn"
                style="@style/white_bigger_style"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll_input"
                android:layout_margin="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/red_bg_style"
                android:gravity="center"
                android:text="@string/loginLabel" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvXieyi"
                    style="@style/et_style"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/zfxieyi"
                    android:textColor="@color/bolder_color_01"
                    android:textSize="13sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.3dp"
                    android:background="@color/split_color"
                    android:layout_below="@+id/tvXieyi"
                    android:layout_alignLeft="@+id/tvXieyi"
                    android:layout_alignRight="@+id/tvXieyi"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
