<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_s_p"
            android:layout_width="match_parent"
            android:text="@string/share_title"
            android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv_s_p"
                android:layout_width="wrap_content"
                android:src="@drawable/share_line"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlqq"
                android:gravity="center|center_horizontal"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_s1"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qq_s"

                    />
                <TextView
                    android:layout_below="@id/iv_s1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="QQ好友"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlzone"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_s2"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zon_s"
                    />
                <TextView
                    android:layout_below="@id/iv_s2"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:text="QQ空间"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlwx"
                android:gravity="center"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_s3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wx_s"
                    />
                <TextView
                    android:layout_below="@id/iv_s3"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="微信"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlpyq"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_s4"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qq_f_s"
                    />
                <TextView
                    android:layout_below="@id/iv_s4"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="朋友圈"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlwb"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_s5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sina_s"
                    />
                <TextView
                    android:layout_below="@id/iv_s5"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="微博"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
               android:id="@+id/rlcopy"
                android:gravity="center|center_horizontal"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_s6"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/href_s"
                    />
                <TextView
                    android:layout_below="@id/iv_s6"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="复制链接"
                    android:layout_height="wrap_content" />

            </RelativeLayout>





        </LinearLayout>
    </LinearLayout>

</LinearLayout>