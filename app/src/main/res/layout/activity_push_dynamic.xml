<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/sysBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvCancle"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            style="@style/white_normal_style"
            android:text="取消" />

        <TextView
            android:id="@+id/tvSave"
            style="@style/white_normal_style"
            android:textColor="#56bafc"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="发送" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/etShareContent"
            android:padding="10dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textScaleX="0.2"
            android:lineSpacingMultiplier="1.2"
            style="@style/gray02_normal_style"
            android:hint="给大家一起分享什么…"
            android:textColorHint="@color/gray"
            android:background="@null"/>
        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_local"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/black_normal_style"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:text="所在位置"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/switchWrapper"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:background="@drawable/switch_view_style_02"
            android:gravity="center_vertical"
            android:padding="1.5dp">

            <RelativeLayout
                android:id="@+id/switchTrigger"
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/switch_view_style_fe"
                android:gravity="center"
                android:tag="open_yes">

                <TextView
                    android:id="@+id/switchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开"
                    android:clickable="false"
                    android:textColor="@color/mainColor"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>




</LinearLayout>
