<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    tools:context="com.huixiangtv.liveshow.activity.MainActivity">

    <!-- 内容界面 -->
    <FrameLayout
        android:layout_above="@+id/spline"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <View style="@style/split_line" android:id="@+id/spline" android:layout_alignParentBottom="true" android:layout_marginBottom="50dp"   />

    <RelativeLayout

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sysBg">

        <LinearLayout
            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/tab_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:focusable="false"
                    android:src="@mipmap/tab1" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:focusable="false"
                    android:src="@mipmap/tab2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:focusable="false"
                    android:src="@mipmap/tab3" />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
