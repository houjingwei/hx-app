<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rotRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseTitleHeight"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title"
            style="@style/common_title_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="今日推荐" />


    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        android:scrollbars="none">

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/icon_search" />

                        <TextView
                            android:id="@+id/tvSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:text="@string/input_your_favorite_video"
                            android:textColor="#b3b3b3"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#efefef"
                    android:orientation="vertical">

                    <com.huixiangtv.live.utils.widget.BannerView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/sysBg"
                        android:paddingBottom="5dp" />

                    <!--<com.huixiangtv.live.utils.widget.LoadingView-->
                    <!--android:id="@+id/loadView"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:visibility="gone"-->
                    <!--app:loadingText="加载中..." />-->

                    <com.huixiangtv.live.utils.widget.LinearLayoutForListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:mydivider="@color/self_line"
                        app:mydividerHeight="0dp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


    <LinearLayout
        android:id="@+id/llone_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/flInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <RelativeLayout
                android:id="@+id/myView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <com.huixiangtv.live.utils.widget.SwitchScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ScrollLayoutTest"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/sysBg"
                    android:scrollbars="none"></com.huixiangtv.live.utils.widget.SwitchScrollLayout>

                <com.huixiangtv.live.utils.widget.SwitchPageControlView
                    android:id="@+id/pageControl"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:background="#8f00000f"
                    android:gravity="center"
                    android:visibility="gone"></com.huixiangtv.live.utils.widget.SwitchPageControlView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"

                android:background="@color/normal_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="李若"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvLoveCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/love_val"
                            android:src="@drawable/love_val"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="170 Cm   45Kg   三围：84 － 70 － 89"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="李永波："
                        android:textColor="#CBBE40"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvContent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这个没有你的冬天，比以前冷哦。"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="刘思佳："
                        android:textColor="#CBBE40"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvContent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黑白萌萌的头像就是我。"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="繁星点点："
                        android:textColor="#CBBE40"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvContent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充满阳光的午后，听小美女唱歌,真的是一种享受，好幸福哦！"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="张悦："
                        android:textColor="#CBBE40"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvContent4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北方人，有精月彩唱歌跳舞才华。"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
</LinearLayout>
