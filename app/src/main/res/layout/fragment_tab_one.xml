<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/sysBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rotRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/baseTitleHeight"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title"
            style="@style/common_title_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="今日推荐" />


    </RelativeLayout>


    <com.chanven.lib.cptr.PtrClassicFrameLayout
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/test_list_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="700"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.8" >

        <ListView
            android:id="@+id/test_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp" />
    </com.chanven.lib.cptr.PtrClassicFrameLayout>
    <LinearLayout
        android:id="@+id/llone_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/flInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <RelativeLayout
                android:id="@+id/myView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <com.huixiangtv.live.utils.widget.SwitchScrollLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ScrollLayoutTest"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/sysBg"
                    android:scrollbars="none"></com.huixiangtv.live.utils.widget.SwitchScrollLayout>

                <com.huixiangtv.live.utils.widget.SwitchPageControlView
                    android:id="@+id/pageControl"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/black80"
                    android:gravity="center"
                    android:visibility="gone"></com.huixiangtv.live.utils.widget.SwitchPageControlView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"

                android:background="@color/normal_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="李若"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvLoveCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawablePadding="8dp"
                            android:drawableRight="@drawable/love_val"
                            android:src="@drawable/love_val"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="170 Cm   45Kg   三围：84 － 70 － 89"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="李永波："
                        android:textColor="#CBBE40"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvContent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这个没有你的冬天，比以前冷哦。"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="刘思佳："
                        android:textColor="#CBBE40"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvContent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="黑白萌萌的头像就是我。"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="繁星点点："
                        android:textColor="#CBBE40"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvContent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="充满阳光的午后，听小美女唱歌,真的是一种享受，好幸福哦！"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvbName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="张悦："
                        android:textColor="#CBBE40"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvContent4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北方人，有精月彩唱歌跳舞才华。"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
</LinearLayout>
