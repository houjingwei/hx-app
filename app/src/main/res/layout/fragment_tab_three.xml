<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llUserTop"
        android:layout_width="match_parent"
        android:background="@color/mainColor"
        android:layout_height="wrap_content">



        <LinearLayout
            android:paddingTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivPhoto"
                    android:clickable="true"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/default_head"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserName"
                style="@style/white_bigger_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:clickable="true"
                android:text="奶茶妹妹" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/llTitle"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/artist"
                    style="@style/white_small_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fragment_tab_three_ellipse"
                    android:gravity="center"
                    android:minHeight="25dp"
                    android:text="@string/artist" />


            </LinearLayout>

            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_gravity="center"
                android:background="@color/white_01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llMyfans"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFans"
                            style="@style/white_bigger_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="top"
                            android:text="6767" />

                        <TextView
                            android:id="@+id/fans"
                            style="@style/white_small_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:text="粉丝" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@color/white_01" />

                    <LinearLayout
                        android:id="@+id/llfaned"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/haveFans"
                            style="@style/white_bigger_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1232" />

                        <TextView
                            style="@style/white_small_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/haveFans" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@color/white_01" />

                    <LinearLayout
                        android:id="@+id/llsj"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMySj"
                            style="@style/white_bigger_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1232" />

                        <TextView
                            style="@style/white_small_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/labenSj" />
                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/sysBg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAccount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/listview"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:clickable="true"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/orderimg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_account" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/account" />


                    <TextView
                        android:id="@+id/tvAccount"
                        android:layout_marginTop="3dp"
                        style="@style/gray_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="576.8元" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llLoves"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/listview"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_love" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/love" />


                    <TextView
                        android:id="@+id/tvLoves"
                        android:layout_marginTop="3dp"
                        style="@style/gray_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="5767个" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/listview"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/setimg"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_set" />

            <TextView
                android:id="@+id/settxt"
                style="@style/black_normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/setimg"
                android:text="@string/set" />

            <ImageView
                android:id="@+id/setimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_go" />
        </RelativeLayout>

        <View style="@style/split_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/listview"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/responseimg"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_response" />

            <TextView
                android:id="@+id/responsetxt"
                style="@style/black_normal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/responseimg"
                android:text="@string/response" />

            <ImageView
                android:id="@+id/responseimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_go" />
        </RelativeLayout>
        <View style="@style/split_line" />
    </LinearLayout>

</LinearLayout>