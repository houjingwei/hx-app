<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/sysBg"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/faxian_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sysBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlUserInfo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:clickable="true"
                android:padding="5dp">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:src="@drawable/default_head"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:siBorderWidth="2dp"
                    app:siBorderColor="@color/white"/>

                <LinearLayout
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ivPhoto"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvNickName"
                        style="@style/black_bigger_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="刘亦菲" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvFans"
                            style="@style/gray_normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="0" />
                        <TextView
                            style="@style/gray_normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="粉丝" />
                        <TextView
                            android:id="@+id/tvHots"
                            style="@style/gray_normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="0" />
                        <TextView
                            style="@style/gray_normal_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:text="人气" />

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rlAccount"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/listview"
                android:paddingLeft="8dp"
                android:paddingRight="5dp"
                >

                <ImageView
                    android:id="@+id/ivAccount"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/v2_icon_account" />

                <TextView
                    style="@style/black_normal_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/ivAccount"
                    android:text="@string/account" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_go" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rlLove"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/ivLove"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/v2_icon_love" />

                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ivLove"
                        android:text="@string/love" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_go" />
                </RelativeLayout>

                <View
                    style="@style/split_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"/>
                <RelativeLayout
                    android:id="@+id/rlCard"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/ivCard"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/v2_icon_card" />

                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ivCard"
                        android:text="@string/userCard" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_go" />


                </RelativeLayout>

                <View
                    style="@style/split_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"/>

                <RelativeLayout
                    android:id="@+id/rlAuth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/ivAuth"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/v2_icon_auth" />

                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ivAuth"
                        android:text="@string/userAuth"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_go" />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rlSetting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/ivSetting"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/v2_icon_setting" />

                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ivSetting"
                        android:text="@string/set" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_go" />
                </RelativeLayout>

                <View
                    style="@style/split_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"/>
                <RelativeLayout
                    android:id="@+id/rlFeedBack"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    >

                    <ImageView
                        android:id="@+id/ivFeedBack"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/v2_icon_feedback" />

                    <TextView
                        style="@style/black_normal_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/ivFeedBack"
                        android:text="@string/feedBack" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_go" />


                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>
